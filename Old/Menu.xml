    <!-- TEMPLATES -->

    <Button name="CUI_ButtonTemplate" inherits="UIPanelButtonTemplate" virtual="true">
        <Size x="80" y="20"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Text" font="Interface\AddOns\CalippoUI\Fonts\FiraSans-Medium.ttf">
                    <FontHeight>
                        <AbsValue val="10"/>
                    </FontHeight>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Button>

    <FontString name="CUI_LargeFontTemplate" font="Interface\AddOns\CalippoUI\Fonts\FiraSans-Medium.ttf" virtual="true">
        <FontHeight>
            <AbsValue val="16"/>
        </FontHeight>
    </FontString>

    <FontString name="CUI_MediumFontTemplate" font="Interface\AddOns\CalippoUI\Fonts\FiraSans-Medium.ttf" virtual="true">
        <FontHeight>
            <AbsValue val="13"/>
        </FontHeight>
    </FontString>

    <FontString name="CUI_SmallFontTemplate" font="Interface\AddOns\CalippoUI\Fonts\FiraSans-Medium.ttf" virtual="true">
        <FontHeight>
            <AbsValue val="10"/>
        </FontHeight>
    </FontString>

    <Slider name="CUI_SliderTemplate" inherits="MinimalSliderWithSteppersTemplate" virtual="true">
        <Size x="150" y="40"/>
    </Slider>

    <Frame name="CUI_CheckButtonTemplate" virtual="true">
        <Size x="100" y="20"/>
        <Layers>
            <Layer>
                <FontString parentKey="Text" text="TEST TEXT!" font="Interface\AddOns\CalippoUI\Fonts\FiraSans-Medium.ttf">
                    <FontHeight>
                        <AbsValue val="10"/>
                    </FontHeight>
                    <Anchors>
                        <Anchor point="LEFT" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <CheckButton parentKey="CheckButton" inherits="MinimalCheckboxArtTemplate" virtual="true">
                <Size x="20" y="20"/>
                <Anchors>
                    <Anchor point="RIGHT" x="0" y="0"/>
                </Anchors>
            </CheckButton>
        </Frames>
    </Frame>
