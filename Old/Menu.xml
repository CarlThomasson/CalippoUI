            <Button parentKey="ReloadButton" inherits="UIPanelButtonTemplate">
                <Size x="50" y="20"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-40" y="-5"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="Count" text="Reload" font="Interface\AddOns\CalippoUI\Fonts\FiraSans-Medium.ttf">
                            <FontHeight>
                                <AbsValue val="10"/>
                            </FontHeight>
                            <Anchors>
                                <Anchor point="CENTER" x="0" y="0"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnClick>
                        ReloadUI()
                    </OnClick>
                </Scripts>
            </Button>

            <Button parentKey="CloseButton" inherits="UIPanelCloseButton">
                <Size x="20" y="20"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5"/>
                </Anchors>
            </Button>

            <!-- OPTION FRAMES -->

            <Frame parentKey="OptionsContainer">
